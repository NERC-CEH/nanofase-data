output_file: data.nc
root_dir: /home/sharrison/OneDrive/ceh/projects/nanofase/data/
time:
  n: 365
  dt: 86400
  start_date: 2015-01-01
flow_dir:
  type: raster
  path: interim/flowdir_05000_thames.tif
  crs: EPSG:27700
runoff:
  type: csv
  path: processed/model-preprocessed/runoff.csv
  units: mm/day
precip:
  type: raster
  path: interim/rainfall/rainfall_5km_2015-{t}.tif
  units: mm/day
  t_min: 1
  source: CEH Gridded Estimates of Areal Rainfall (CEH - GEAR) - Daily rainfall (mm) 1km resolution for year 2015 - Great Britain. Resampled to 5 km resolution.
  references: Tanguy, M., Prosdocimi, I., Keller, V.D.J., Terry, J., Cole, S.J., Morris, D.G., Dixon, H. (2014). Consolidation of a CEH reference rainfall dataset for hydrological purposes for the UK. CEH-Wallingford, Oxfordshire, UK.
soil_bulk_density:
  type: raster
  units: t/m**3
  path: interim/soil/bulk-density_osgb_5km.tif
  source: European Soil Data Centre topsoil physical properties resampled to OS National Grid (ESPG:27700) by bilinear interpolation. See https://esdac.jrc.ec.europa.eu/content/topsoil-physical-properties-europe-based-lucas-topsoil-data.
soil_water_content_field_capacity:
  type: raster
  path: processed/model-preprocessed/soil_wc-fc.tif
  source: European Soil Data Centre soil hydraulic properties resampled to OS National Grid (ESPG:27700) by bilinear interpolation. See https://esdac.jrc.ec.europa.eu/content/maps-indicators-soil-hydraulic-properties-europe.
